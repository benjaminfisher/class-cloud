<%= form_for @course do |f| %>

<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :code %><br />
  <%= f.text_field :code %>
</p>

<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>

<p>
  <%= f.label :link %><br />
  <%= f.text_field :link %>
</p>

<p>
  <%= f.label :start_date, "Start Date" %><br />
  <%= f.text_field :start_date %>
</p>

<p>
  <%= f.label :end_date, "End Date" %><br />
  <%= f.text_field :end_date %>
</p>

<%= submit_tag "Submit" %>
<% end %>
